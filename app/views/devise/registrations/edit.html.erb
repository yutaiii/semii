<div class="edit_container">
  <h2>ユーザー情報編集</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <% if devise_error_messages!.present? %>
      <div class="error_explanation">
        <%= devise_error_messages! %>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: 'form_textfield' %>
    </div>

    <div class="field">
      <%= f.label '学部' %><br />
      <%= f.collection_select(:faculty_id, @faculty, :id, :name, {}, {:class => 'form_selectbox'}) %>
    </div>

    <div class="field">
        <%= f.label '学科' %><br />
        <%= f.collection_select(:department_id, @department, :id, :name, {}, {:class => 'form_selectbox'}) %>
    </div>

    <div class="field">
        <%= f.label 'ゼミ' %><br />
        <%= f.collection_select(:seminar_id, @seminar, :id, :name, {}, {:class => 'form_selectbox'}) %>
    </div>

    <div class="field">
      <%= f.label :password %> <i>（変更しない場合は何も記入しないでください。）</i><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form_textfield', placeholder: '新規パスワード' %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(変更の反映にはパスワードの入力が必須です。)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: 'form_textfield', placeholder: '現在のパスワード' %>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: 'button form_btn_submit' %>
    </div>
  <% end %>
</div>
