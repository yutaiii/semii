<div class="image_background">
  <div class="signup_container">
    <h2 class="title">新規等録</h2>
    <div class="form_container">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if devise_error_messages!.present? %>
  <div class="error_explanation">
    <%= devise_error_messages! %>
  </div>
  <% end %>

        <div class="field">
          <%= f.text_field :name, class: 'form_textfield', autofocus: true, placeholder: 'ユーザー名', presence: true %>
        </div>

        <div class="field">
          <%= f.password_field :password,  class: 'form_textfield', autocomplete: "off", placeholder: 'パスワード', presence: true %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation,  class: 'form_textfield', autocomplete: "off", placeholder: 'パスワード確認', presence: true %>
        </div>

        <div class="field">
          <%= f.collection_select(:faculty_id, Faculty.all, :id, :name, {}, {:class => 'form_selectbox'}) %>
        </div>

        <div class="field">
          <%= f.collection_select(:department_id, Department.all, :id, :name, {}, {:class => 'form_selectbox'}) %>
        </div>

          <div class="form_btn_wrapper">
            <%= f.submit '新規等録', class: 'button form_btn_submit' %>
          </div>

      <% end %>

    </div>
  </div>
</div>
